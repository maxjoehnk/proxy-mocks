{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015.proxy",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "declaration": true,
    "target": "es2015",
    "allowJs": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/test-utils.ts"
  ]
}
